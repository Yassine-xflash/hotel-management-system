<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotel.client.controllers.InvoiceController">
    <children>
        <Label layoutX="200.0" layoutY="28.0" text="Facture de Paiement">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="50.0" layoutY="100.0" text="ID de Paiement:" />
        <Label fx:id="paiementIdLabel" layoutX="170.0" layoutY="100.0" />

        <Label layoutX="50.0" layoutY="130.0" text="ID de Réservation:" />
        <Label fx:id="reservationIdLabel" layoutX="170.0" layoutY="130.0" />

        <Label layoutX="50.0" layoutY="160.0" text="Chambre:" />
        <Label fx:id="chambreLabel" layoutX="170.0" layoutY="160.0" />

        <Label layoutX="50.0" layoutY="190.0" text="Montant Payé:" />
        <Label fx:id="montantLabel" layoutX="170.0" layoutY="190.0" />

        <Label layoutX="50.0" layoutY="220.0" text="Méthode de Paiement:" />
        <Label fx:id="methodeLabel" layoutX="200.0" layoutY="220.0" />

        <Label layoutX="50.0" layoutY="250.0" text="Date de Paiement:" />
        <Label fx:id="dateLabel" layoutX="180.0" layoutY="250.0" />

        <Button fx:id="downloadButton" layoutX="230.0" layoutY="320.0" onAction="#handleDownload" text="Télécharger la Facture" />
        
        <Button fx:id="backToDashboardButton" layoutX="450.0" layoutY="350.0" onAction="#handleBackToDashboard" text="Retour au tableau de bord" />
    </children>
</AnchorPane>
