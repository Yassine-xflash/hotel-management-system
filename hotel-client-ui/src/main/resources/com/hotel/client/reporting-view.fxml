<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotel.client.controllers.ReportingController">
    <children>
        <Label text="Rapports"/>
        <DatePicker fx:id="dateDebutPicker"/>
        <DatePicker fx:id="dateFinPicker"/>
        <Button text="Générer Rapport d'Occupation" onAction="#genererRapportOccupation"/>
        <Button text="Générer Rapport de Revenus" onAction="#genererRapportRevenus"/>
        <TextArea fx:id="reportTextArea" editable="false" prefHeight="400"/>
    </children>
</VBox>
